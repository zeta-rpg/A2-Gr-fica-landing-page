<style>
    .footer {
        background: linear-gradient(135deg, #030e24, #0a3766);
        color: #f1f2f1;
        padding: 60px 0 20px;
        margin-top: 80px;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        padding: 0 20px;
    }

    .footer-section h3 {
        color: #04ffee;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .footer-section h4 {
        color: #04ffee;
        font-size: 1.2rem;
        margin-bottom: 15px;
    }

    .footer-section p {
        line-height: 1.6;
        margin-bottom: 15px;
        color: #b8c5d1;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
    }

    .footer-section ul li {
        margin-bottom: 8px;
    }

    .footer-section ul li a {
        color: #b8c5d1;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-section ul li a:hover {
        color: #04ffee;
    }

    .social-links {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(4, 255, 238, 0.1);
        border-radius: 50%;
        color: #04ffee;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background: #04ffee;
        color: #030e24;
        transform: translateY(-2px);
    }

    .contact-info p {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .contact-info i {
        color: #04ffee;
        width: 16px;
    }

    .newsletter {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .newsletter input {
        flex: 1;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.1);
        color: #f1f2f1;
        border: 1px solid rgba(4, 255, 238, 0.3);
    }

    .newsletter input::placeholder {
        color: #b8c5d1;
    }

    .newsletter input:focus {
        outline: none;
        border-color: #04ffee;
        box-shadow: 0 0 10px rgba(4, 255, 238, 0.3);
    }

    .newsletter button {
        padding: 10px 20px;
        background: linear-gradient(45deg, #04ffee, #180cff);
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

    .newsletter button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(4, 255, 238, 0.4);
    }

    .footer-bottom {
        border-top: 1px solid rgba(4, 255, 238, 0.2);
        margin-top: 40px;
        padding: 20px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 20px;
        padding-right: 20px;
    }

    .footer-links {
        display: flex;
        gap: 20px;
    }

    .footer-links a {
        color: #b8c5d1;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: #04ffee;
    }

    /* Responsive - Tablet */
    @media (max-width: 1024px) {
        .footer {
            padding: 50px 0 15px;
        }

        .footer-content {
            gap: 30px;
            padding: 0 15px;
        }

        .footer-section h3 {
            font-size: 1.3rem;
        }

        .footer-section h4 {
            font-size: 1.1rem;
        }
    }
    @media (max-width: 768px) {
        .footer {
            padding: 40px 0 15px;
            margin-top: 60px;
        }

        .footer-content {
            grid-template-columns: repeat(2, 1fr);
            gap: 25px;
            padding: 0 10px;
        }

        .footer-bottom {
            flex-direction: column;
            gap: 15px;
            text-align: center;
            padding-left: 10px;
            padding-right: 10px;
        }

        .newsletter {
            flex-direction: column;
            gap: 8px;
        }

        .newsletter button {
            padding: 8px 15px;
        }

        .social-links {
            gap: 10px;
        }

        .social-links a {
            width: 35px;
            height: 35px;
        }

        .footer-section p {
            font-size: 0.9rem;
        }

        .footer-links {
            gap: 15px;
        }

        .footer-links a {
            font-size: 0.85rem;
        }
    }

    /* Responsive - Small Mobile */
    @media (max-width: 480px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .footer-section h3 {
            font-size: 1.2rem;
        }

        .footer-section h4 {
            font-size: 1rem;
        }

        .footer-section p {
            font-size: 0.85rem;
        }

        .contact-info p {
            font-size: 0.85rem;
        }

        .newsletter input {
            padding: 8px;
        }

        .footer-links {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>