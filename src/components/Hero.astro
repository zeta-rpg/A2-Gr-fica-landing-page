---
import Image from "../assets/main1.jpg";
import ImageProducto from "../assets/producto.jpeg";
import Productos from "./Productos.astro";
import Carrusel from "./Carrusell.astro";

---

<main>
    <div class="grid-content">
        <div class="hero-text">
            <h1 class="hero-title">Donde comienzan tus <span class="gradient-text">ideas</span></h1>
            <p class="hero-subtitle">Transformamos tus conceptos en impresiones de alta calidad. Especialistas en diseño gráfico e impresión digital con más de 10 años de experiencia.</p>
            <div class="hero-buttons">
                <a href="#productos" class="btn-primary">Ver Productos</a>
                <a href="#contacto" class="btn-secondary">Cotizar Proyecto</a>
            </div>
        </div>
        <Carrusel />
    </div>
    
    <h2 class="gradient-text">Nuestros Productos</h2>
    <div class="productos-container" id="productos">
        <Productos title="Producto 1" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={9.99} />
        <Productos title="Producto 2" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={19.99} />
        <Productos title="Producto 3" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={29.99} />
        <Productos title="Producto 4" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={39.99} />
        <Productos title="Producto 5" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={49.99} />
        <Productos title="Producto 6" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={59.99} />
        <Productos title="Producto 7" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={69.99} />
        <Productos title="Producto 8" description="Lorem ipsum dolor sit amet" image={ImageProducto.src} precio={79.99} />
    </div>
</main>

<style>
    main {
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        background-color: #ffffff;
        flex-direction: column;
        padding: 120px 20px 80px;
    }

    main h2 {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 20px;
        color: #0a3766;
        font-weight: bold;
    }

    .gradient-text {
        background: linear-gradient(90deg, #04ffee, #180cff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .grid-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 60px;
        max-width: 1200px;
        margin: 0 auto 100px;
    }

    .hero-text {
        padding: 0 20px;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: bold;
        color: #0a3766;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: #495057;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .hero-buttons {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .btn-primary, .btn-secondary {
        padding: 15px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(45deg, #04ffee, #180cff);
        color: white;
        box-shadow: 0 5px 15px rgba(4, 255, 238, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(4, 255, 238, 0.4);
    }

    .btn-secondary {
        background: transparent;
        color: #0a3766;
        border: 2px solid #0a3766;
    }

    .btn-secondary:hover {
        background: #0a3766;
        color: white;
        transform: translateY(-2px);
    }
   

    .grid-content img {
        width: 100%;
        height: auto;
}
.productos-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin: 50px auto 0;
        background-color: #4a637d56;
        max-width: 1200px;
        padding: 70px;
        border-radius: 15px;
    }

    .productos-container .producto {
        flex: 1;
        max-width: 300px;
    }

    @media (max-width: 768px) {
        .grid-content {
            grid-template-columns: 1fr;
            gap: 40px;
            text-align: center;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-buttons {
            justify-content: center;
        }

        .btn-primary, .btn-secondary {
            padding: 12px 25px;
            font-size: 1rem;
        }

        .productos-container {
            padding: 40px 20px;
        }
    }
</style>